[Unit]
Description=Manavartha AI Backend Service
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/MANAVARTHA-AI/backend
ExecStart=/home/ubuntu/MANAVARTHA-AI/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
EnvironmentFile=/home/ubuntu/MANAVARTHA-AI/backend/.env

[Install]
WantedBy=multi-user.target
